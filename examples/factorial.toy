/*
 * compute factorials, the slow recursive way.
 */
    int n := 0;
    
proc n(int n)int:
    int result := 0;

    if n=0 then
	result := 1;
    else
	result := n * n(n - 1);
    fi;
    -> result
corp;

proc main()int:
    int n := 0;
    while 
	write("Enter n, or >= 10 to exit: ");
	readln(n);
    ->
	n < 10
    do
	write("Factorial of ", n, " is ", n(n), "\n");
    od;
    -> 0
corp;