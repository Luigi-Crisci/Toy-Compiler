proc makeMaths(int op)float :	
	float primo, secondo, res;

	write("Inserire il primo argomento (int o float): ");
	readln(primo);
	write("Inserire il secondo argomento (int o float): ");
	readln(secondo);


	if op = 1
	then 
		res := primo + secondo;
	elif op = 2
	then
		res := primo - secondo;
	elif op = 3
	then
		res := primo * secondo;
	elif op = 4  
	then
		res := primo / secondo;
	fi;

	-> res
corp;


